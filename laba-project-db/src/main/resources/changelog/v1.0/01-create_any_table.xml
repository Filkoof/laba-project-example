<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <!-- Создание таблицы -->
    <changeSet id="create_any_table" author="Your_name">
        <createTable schemaName="${schema_name}"
                     tableName="table_name"
                     remarks="Описание таблицы">
            <column name="id" type="int" remarks="Идентификатор">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="status" type="char(1)" remarks="Описание поля">  </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
